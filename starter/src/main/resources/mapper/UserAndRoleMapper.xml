<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.saintdan.framework.starter.mapper.UserAndRoleMapper">

    <resultMap type="com.saintdan.framework.starter.po.UserAndRole" id="userAndRoleMap">
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
    </resultMap>

    <delete id="deleteByUserId">
        delete from users_and_roles where user_id = #{userId}
    </delete>

    <delete id="deleteByRoleId">
        delete from users_and_roles where role_id = #{roleId}
    </delete>

</mapper>